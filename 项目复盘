  </swiper>
  data () {
    return {  
      swiperOption:{
        autoplay:true,//自动播放
        loop:true,//循环播放
        effect:'coverflow',//切换效果
        cubeEffect: {
          shadowOffset: 100,
          shadowScale: 0.6
        },
        pagination:{
          el:'.swiper-pagination',
          clickable:true
        },
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
        },
    }
  }}

